<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoletaApp.Views.Coletas.RegistrarColetasView"
             Shell.PresentationMode="Animated"
             Title="RegistrarColetasView">
    <VerticalStackLayout>
        <ScrollView>
            <VerticalStackLayout Padding="10, 0, 0, 0" VerticalOptions="FillAndExpand">
             
                                       
                    <StackLayout Padding="10">

                        <Label Text="IdColeta" FontSize="14"/>
                        <Entry Text="{Binding IdColeta}" IsEnabled="False"  FontSize="14" />


                        <Label Text="IdEcoponto" FontSize="14"/>
                        <Entry Text="{Binding IdEcoponto}"   FontSize="14" />

                          <Label Text="IdUtilizador" FontSize="14"/>
                         <Entry Text="{Binding IdUtilizador}"   FontSize="14" />

                        <Label Text="Peso" FontSize="14"/>
                        <Entry Text="{Binding Peso}" FontSize="14"/>

                        <Label Text="TotalEcopoints" FontSize="14"/>
                        <Entry Text="{Binding TotalEcopoints}" FontSize="14"/> 

        

                        <Button Text="Registrar" Command="{Binding RegistrarCommand}"></Button>
                    <Button Text="Cancelar" Command="{Binding cancelarCommand}"></Button>
                </StackLayout>
                    
                               
            </VerticalStackLayout>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>