<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoletaApp.Views.Utilizador.CadastroView"
             Title="CadastroView">
    <VerticalStackLayout>
        <Entry Placeholder="Digite seu nome de usuÃ¡rio" Text ="{Binding Nome}"
         Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        </Entry>
        <Entry Placeholder="Digite a senha" Text="{Binding Email}" IsPassword="True" 
            Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
        </Entry>
        <Entry Placeholder="Digite a senha" Text="{Binding Username}" IsPassword="True" 
     Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
        </Entry>
        <Entry Placeholder="Digite a senha" Text="{Binding Passwordstring}" IsPassword="True" 
     Margin="0,10,0,0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
        </Entry>

        <Button Text="Cadastrar" Command="{Binding AutenticarCommand}" Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>